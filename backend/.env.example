# Environment (backend)
GALGAME_ENV=sandbox
SESSION_TOKEN=change-me

# API host/port
API_HOST=127.0.0.1
API_PORT=8000
API_DEBUG=true

# Frontend URLs
FRONTEND_BASE_URL=http://localhost:5173
FRONTEND_SETTINGS_URL=http://localhost:5173/settings

# Paths (optional overrides)
VNITE_DATA_PATH=
VNITE_LOG_PATH=
GALGAME_LIBRARY_ROOT=
GALGAME_LIBRARY_ROOTS=
GALGAME_CONFIG_DIR=

# Rate limiting (optional)
GALGAME_RATE_LIMITS=100/minute,1000/hour
ALLOW_EXTERNAL_PATHS=false

# Database
DATABASE_PATH=data/library.db
BACKUP_DIR=data/backups

# Google Drive OAuth (optional)
GDRIVE_CLIENT_ID=
GDRIVE_CLIENT_SECRET=
GDRIVE_REDIRECT_URI=http://localhost:8000/api/v1/auth/gdrive/callback

# VNDB API
VNDB_API_URL=https://api.vndb.org/kana
